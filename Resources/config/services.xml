<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" />

        <!-- Services -->
        <service public="true" id="CommonGateway\XxllncZGWBundle\Service\MapZaakService" >
            <argument key="$entityManager" type="service" id="Doctrine\ORM\EntityManagerInterface"/>
            <argument key="$objectEntityService" type="service" id="App\Service\ObjectEntityService"/>
            <argument key="$translationService" type="service" id="App\Service\TranslationService"/>
            <argument key="$synchronizationService" type="service" id="App\Service\SynchronizationService"/>
        </service>
        <service public="true" id="CommonGateway\XxllncZGWBundle\Service\MapZaakTypeService" >
            <argument key="$entityManager" type="service" id="Doctrine\ORM\EntityManagerInterface"/>
            <argument key="$objectEntityService" type="service" id="App\Service\ObjectEntityService"/>
            <argument key="$translationService" type="service" id="App\Service\TranslationService"/>
            <argument key="$synchronizationService" type="service" id="App\Service\SynchronizationService"/>
        </service>

        <!-- Handlers -->
        <service public="true" id="CommonGateway\XxllncZGWBundle\ActionHandler\MapZaakHandler" />
        <service public="true" id="CommonGateway\XxllncZGWBundle\ActionHandler\MapZaakTypeHandler" />
        <service public="true" id="CommonGateway\XxllncZGWBundle\ActionHandler\ZgwToXxllncHandler" />
    </services>
</container>
